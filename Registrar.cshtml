@model RegistroEstudiantes.Models.Estudiantes

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">

                <h4>Nuevo estudiante</h4>
            </div>
            <div class="panel-body">

                <form action="@Url.Action("Registrar","Estudiantes")" method="post">
                    <div class="form-group">
                        <label>Nombres</label>
                        <input type="text" class="form-control" name="Nombres" required max="30"/>
                    </div>
                    <div class="form-group">
                        <label>Apellidos</label>
                        <input type="text" class="form-control" name="Apellidos" required/>
                    </div>
                    <div class="form-group">
                        <label>Fecha de nacimiento</label>
                        <input type="text" class="form-control" name="Fecha" required min="16"/>
                    </div>
                    <div class="form-group">
                       <label>Curso</label>
                       <input type="text" class="form-control" name="Curso" required/>
                    </div>
                    <div>
                        <input type="radio" name="Estado" value="Activo" id="EstadoPositivo" />
                        <label>Activo</label>
                        <input type="radio" name="Estado" value="Inactivo" id="EstadoNegativo" />
                        <label>Inactivo</label>
                    </div>
                    <br />
                       <button type="submit" class="btn btn-primary">Registrar</button>
                       <a class="btn btn-warning" href="@Url.Action("Inicio","Estudiantes")">Volver</a>
                     
                 </form>

        </div>


        </div>
    </div>
</div>